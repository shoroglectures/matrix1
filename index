        <div class="slide active" id="slide0">
            <div class="slide-content">
                <h1 class="slide-title">المصفوفات والمحددات</h1>
                <div class="slide-body">
                    <div class="content-section">
                        <h2 class="content-title">مقدمة في المصفوفات</h2>
                        <p class="content-text">المصفوفات هي طريقة منظمة لترتيب البيانات في صفوف وأعمدة. وهي أداة قوية في الرياضيات والبرمجة لتخزين وتحليل المعلومات.</p>
                        <p class="content-text">تستخدم المصفوفات في مجالات متنوعة مثل الاقتصاد والأرصاد الجوية والإنتاج الصناعي. في هذا العرض، ستعرفين على مفهوم المصفوفات والمحددات وكيفية استخدامها لتنظيم البيانات وتحليلها بطريقة فعالة.</p>
                    </div>
                    
                    <div class="activity">
                        <h3 class="activity-title">نشاط تفاعلي: عددي العناصر</h3>
                        <p class="content-text">انظري إلى الصورة التالية وأحصي عدد ألوان البلاشر:</p>
                        <div class="media-container">
                            <div class="media-item">
                                <img src="lipstick-count.jpg" alt="أنواع أحمر الشفاه" class="media-image">
                            </div>
                        </div>
                        <div class="quiz-container">
                            <div class="quiz-question">كم عدد ألوان البلاشر في الصورة؟</div>
                            <div class="quiz-options">
                                <div class="quiz-option" data-value="5">5</div>
                                <div class="quiz-option" data-value="8">8</div>
                                <div class="quiz-option" data-value="12">12</div>
                                <div class="quiz-option" data-value="15">15</div>
                            </div>
                            <button class="btn" id="checkAnswer0">تحقق من الإجابة</button>
                            <div class="quiz-result" id="quizResult0"></div>
                        </div>
                    </div>
                </div>
                <div class="nav-buttons">
                    <button class="btn btn-prev" disabled><i class="fas fa-arrow-right"></i> السابق</button>
                    <button class="btn btn-next">التالي <i class="fas fa-arrow-left"></i></button>
                </div>
            </div>
        </div>

        <!-- باقي الشرائح تبقى كما هي -->
        <!-- ... -->
        
    </div>

    <!-- شريط التقدم -->
    <div class="slide-progress" id="slideProgress">
        <!-- سيتم إضافة نقاط التقدم ديناميكيًا -->
    </div>

    <script>
        // بيانات الشرائح
        const slides = [
            { id: 'slide0', title: 'مقدمة في المصفوفات' },
            { id: 'slide1', title: 'سؤال: ماذا تلاحظين؟' },
            { id: 'slide2', title: 'كم عدد أحمر الشفاه؟' },
            { id: 'slide3', title: 'أهداف المصفوفات' },
            { id: 'slide4', title: 'تعريف المصفوفة وأهميتها' },
            { id: 'slide5', title: 'أنواع المصفوفات وخصائصها' },
            { id: 'slide6', title: 'رتبة المصفوفة' },
            { id: 'slide7', title: 'تساوي المصفوفات' },
            { id: 'slide8', title: 'منقول المصفوفة' },
            { id: 'slide9', title: 'جمع وطرح المصفوفات' },
            { id: 'slide10', title: 'ضرب مصفوفة بعدد' },
            { id: 'slide11', title: 'ضرب المصفوفات' },
            { id: 'slide12', title: 'أهداف المحددات' },
            { id: 'slide13', title: 'مقدمة في المحددات' },
            { id: 'slide14', title: 'قانون المحدد 2×2' },
            { id: 'slide15', title: 'قانون المحدد 3×3' },
            { id: 'slide16', title: 'محدد المصفوفة 2×2' },
            { id: 'slide17', title: 'محدد المصفوفة 3×3' },
            { id: 'slide18', title: 'مثال محدد 3×3' },
            { id: 'slide19', title: 'معكوس المصفوفة' },
            { id: 'slide20', title: 'اختبار نهائي' }
        ];
        
        let currentSlide = 0;
        
        // تهيئة نقاط التقدم
        function initProgressDots() {
            const progressContainer = document.getElementById('slideProgress');
            progressContainer.innerHTML = '';
            
            slides.forEach((slide, index) => {
                const dot = document.createElement('div');
                dot.className = `progress-dot ${index === 0 ? 'active' : ''}`;
                dot.dataset.index = index;
                dot.addEventListener('click', () => goToSlide(index));
                progressContainer.appendChild(dot);
            });
        }
        
        // تحديث شريط التقدم
        function updateProgressBar() {
            const progress = (currentSlide / (slides.length - 1)) * 100;
            document.getElementById('loadingBar').style.transform = `scaleX(${progress / 100})`;
        }
        
        // الانتقال إلى شريحة محددة
        function goToSlide(index) {
            // إخفاء جميع الشرائح
            document.querySelectorAll('.slide').forEach(slide => {
                slide.classList.remove('active');
            });
            
            // إظهار الشريحة المطلوبة
            document.getElementById(slides[index].id).classList.add('active');
            
            // تحديث نقاط التقدم
            document.querySelectorAll('.progress-dot').forEach((dot, i) => {
                if (i <= index) {
                    dot.classList.add('completed');
                } else {
                    dot.classList.remove('completed');
                }
                
                dot.classList.toggle('active', i === index);
            });
            
            // تحديث أزرار التنقل
            updateNavButtons(index);
            
            // تحديث القائمة الجانبية
            document.querySelectorAll('.slide-nav-link').forEach((link, i) => {
                link.classList.toggle('active', i === index);
            });
            
            // تحديث شريط التقدم
            updateProgressBar();
            
            currentSlide = index;
            
            // التمرير إلى أعلى الصفحة
            window.scrollTo(0, 0);
        }
        
        // تحديث أزرار التنقل
        function updateNavButtons(index) {
            const prevButtons = document.querySelectorAll('.btn-prev');
            const nextButtons = document.querySelectorAll('.btn-next');
            
            prevButtons.forEach(btn => {
                btn.disabled = index === 0;
            });
            
            nextButtons.forEach(btn => {
                btn.disabled = index === slides.length - 1;
            });
        }
        
        // التالي
        function nextSlide() {
            if (currentSlide < slides.length - 1) {
                goToSlide(currentSlide + 1);
            }
        }
        
        // السابق
        function prevSlide() {
            if (currentSlide > 0) {
                goToSlide(currentSlide - 1);
            }
        }
        
        // إعادة الدورة
        function restartCourse() {
            goToSlide(0);
        }
        
        // تهيئة الأحداث
        function initEvents() {
            // أحداث أزرار التنقل
            document.querySelectorAll('.btn-next').forEach(btn => {
                btn.addEventListener('click', nextSlide);
            });
            
            document.querySelectorAll('.btn-prev').forEach(btn => {
                btn.addEventListener('click', prevSlide);
            });
            
            document.getElementById('restartCourse').addEventListener('click', restartCourse);
            
            // أحداث القائمة الجانبية
            document.querySelectorAll('.slide-nav-link').forEach((link, index) => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    goToSlide(index);
                });
            });
            
            // أحداث المسابقات
            document.querySelectorAll('.quiz-option').forEach(option => {
                option.addEventListener('click', function() {
                    // إزالة التحديد من جميع الخيارات في نفس المجموعة
                    const options = this.parentElement.querySelectorAll('.quiz-option');
                    options.forEach(opt => opt.classList.remove('selected'));
                    
                    // تحديد الخيار الحالي
                    this.classList.add('selected');
                });
            });
            
            // حدث التحقق من الإجابة الأولى
            document.getElementById('checkAnswer0').addEventListener('click', function() {
                const selectedOption = document.querySelector('#slide0 .quiz-option.selected');
                const resultElement = document.getElementById('quizResult0');
                
                if (!selectedOption) {
                    alert('يرجى اختيار إجابة أولاً');
                    return;
                }
                
                if (selectedOption.dataset.value === '8') {
                    resultElement.textContent = 'إجابة صحيحة! أحسنتِ.';
                    resultElement.className = 'quiz-result correct';
                } else {
                    resultElement.textContent = 'إجابة خاطئة. حاولي مرة أخرى.';
                    resultElement.className = 'quiz-result incorrect';
                }
                
                resultElement.style.display = 'block';
            });
            
            // باقي أحداث التحقق من الإجابات تبقى كما هي
            // ...
            
            // أحداث لوحة المفاتيح للتنقل
            document.addEventListener('keydown', function(e) {
                if (e.key === 'ArrowRight' || e.key === 'ArrowDown') {
                    prevSlide();
                } else if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') {
                    nextSlide();
                }
            });
            
            // تحسينات للهواتف: إضافة تحكم باللمس للمصفوفات
            document.querySelectorAll('.matrix-container').forEach(container => {
                let startX;
                let scrollLeft;
                
                container.addEventListener('touchstart', (e) => {
                    startX = e.touches[0].pageX - container.offsetLeft;
                    scrollLeft = container.scrollLeft;
                });
                
                container.addEventListener('touchmove', (e) => {
                    if (!startX) return;
                    const x = e.touches[0].pageX - container.offsetLeft;
                    const walk = (x - startX) * 2;
                    container.scrollLeft = scrollLeft - walk;
                });
            });
        }
        
        // تهيئة التطبيق
        function initApp() {
            initProgressDots();
            initEvents();
            goToSlide(0);
            updateProgressBar();
        }
        
        // تشغيل التطبيق عند تحميل الصفحة
        document.addEventListener('DOMContentLoaded', initApp);
    </script>
</body>
</html>
